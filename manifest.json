{
    "manifest_version": 2,
    "name": "Selection Pop-up",
    "version": "1.0",
    "description": "Displays a pop-up with the selected text from text areas",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/content.js"],
        "css": ["content/content.css"]
      }
    ]
  }
  